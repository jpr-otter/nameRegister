<Window x:Class="NameRegister.CustomFieldDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Custom Field" Height="150" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Enter new field name:"/>
        <TextBox x:Name="FieldNameTextBox" Margin="0,5,0,10"/>
        <Button Content="OK" Click="OkButton_Click" Width="75" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>